module top (
    input logic [9:0] sw,  // 10 switches
    input logic [3:0] key, // 4 botones
    output logic [3:0] leds // 4 LEDs
);

    logic [3:0] a, b, opcode;
    logic [3:0] result;
    logic N, Z, C, V;

    // Conectar los switches a las entradas a y b
    assign a = sw[3:0]; // Los 4 primeros switches para a
    assign b = sw[7:4]; // Los siguientes 4 switches para b

    // Conectar los botones a las operaciones
    assign opcode = key;

    // Instanciar la ALU
    alu my_alu (
        .a(a),
        .b(b),
        .opcode(opcode),
        .result(result),
        .N(N),
        .Z(Z),
        .C(C),
        .V(V)
    );

    // Conectar las banderas a los LEDs
    assign leds[0] = N;
    assign leds[1] = Z;
    assign leds[2] = C;
    assign leds[3] = V;

endmodule
